<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane centerShape="false" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.CsvUploadViewController">
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
            <Label text="Account Registration">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="inputAccountIban" promptText="IBAN" />
                  <TextField fx:id="inputAccountName" promptText="Account Name" />
                  <Button mnemonicParsing="false" onAction="#addAccount" text="Add Account" />
               </children>
            </HBox>
            <Region prefHeight="80.0" />
                <Label alignment="CENTER" text="Upload Transactions" wrapText="true">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></Label>
                <Button fx:id="selectCsvFile" mnemonicParsing="false" onAction="#selectCsvFile" text="Select csv-file" />
            </children>
        </VBox>
    </children>
</AnchorPane>
