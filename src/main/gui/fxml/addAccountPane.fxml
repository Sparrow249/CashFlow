<?import javafx.scene.layout.*?>

<TitledPane text="Add Account" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.controllers.AddAccountPaneController">
   <content>
      <VBox>
         <children>
            <TextField fx:id="inputAccountIban" promptText="IBAN">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#addAccount" text="Save">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </content>
</TitledPane>
