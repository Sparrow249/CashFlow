<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<TitledPane text="Add Account" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nl.sparrow.cashflow.gui.menu.AddAccountPaneController">
    <content>
        <VBox>
            <children>
                <TextField fx:id="inputAccountIban" promptText="IBAN">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#addAccount" text="Save">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </content>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</TitledPane>
